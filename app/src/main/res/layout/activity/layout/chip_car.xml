<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/car_chip_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chip_tesla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chip_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        android:text="@string/AC_Tesla"
        android:textColor="@color/selector_text_color_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hill.devlibs.widget.AutoSizeTextView
        android:id="@+id/chip_j1772"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/chip_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        android:text="@string/AC_J1772"
        android:textColor="@color/selector_text_color_green"
        app:layout_constraintStart_toEndOf="@+id/chip_tesla"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hill.devlibs.widget.AutoSizeTextView
        android:id="@+id/chip_dc_tesla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/chip_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        android:text="@string/DC_Tesla"
        android:textColor="@color/selector_text_color_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_tesla" />

    <com.hill.devlibs.widget.AutoSizeTextView
        android:id="@+id/chip_dc_j1772"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/chip_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        android:text="@string/DC_CCS1_J1772"
        android:textColor="@color/selector_text_color_green"
        app:layout_constraintStart_toEndOf="@+id/chip_dc_tesla"
        app:layout_constraintTop_toTopOf="@+id/chip_dc_tesla" />

    <com.hill.devlibs.widget.AutoSizeTextView
        android:id="@+id/chip_dc_chademo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/chip_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        android:text="@string/DC_CHAdeMO"
        android:textColor="@color/selector_text_color_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_dc_tesla" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.activity.frag.Main.child.UnpaidFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/detail_address_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/address"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_address_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@+id/detail_address_image"
                app:layout_constraintBottom_toBottomOf="@+id/detail_address_image"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="台北市信義區101大樓" />

            <ImageView
                android:id="@+id/detail_start_date_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time_range"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/detail_address_image"
                app:layout_constraintTop_toBottomOf="@+id/detail_address_image" />

            <TextView
                android:id="@+id/detail_start_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/detail_start_date_image"
                app:layout_constraintTop_toTopOf="@+id/detail_start_date_image"
                tools:text="01-02 Fri. 16:00" />

            <TextView
                android:id="@+id/detail_end_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/btn_disable_red_light"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/detail_start_date_image"
                app:layout_constraintBottom_toBottomOf="@+id/detail_start_date_image"
                tools:text="01-02 Fri. 17:00" />

            <TextView
                android:id="@+id/car_place_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/Parking_number"
                app:layout_constraintStart_toStartOf="@+id/detail_start_date_image"
                app:layout_constraintTop_toBottomOf="@+id/detail_start_date_image" />

            <TextView
                android:id="@+id/car_place_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/car_place_title"
                tools:text="ASD456" />

            <TextView
                android:id="@+id/receipt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/Invoice_number"
                app:layout_constraintStart_toStartOf="@+id/detail_start_date_image"
                app:layout_constraintTop_toBottomOf="@+id/car_place_title" />

            <TextView
                android:id="@+id/receipt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/receipt_title"
                tools:text="ASD7111" />

            <TextView
                android:id="@+id/credit_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/Last_4_yards_of_credit_card"
                app:layout_constraintStart_toStartOf="@+id/detail_start_date_image"
                app:layout_constraintTop_toBottomOf="@+id/receipt_title" />

            <TextView
                android:id="@+id/credit_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/credit_card_title"
                tools:text="7111" />

            <TextView
                android:id="@+id/order_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/Order_number"
                app:layout_constraintStart_toStartOf="@+id/detail_start_date_image"
                app:layout_constraintTop_toBottomOf="@+id/credit_card_title" />

            <TextView
                android:id="@+id/order_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/order_number_title"
                tools:text="PAYASD7111" />

            <TextView
                android:id="@+id/order_cost_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/Parking_fee"
                app:layout_constraintStart_toStartOf="@+id/detail_start_date_image"
                app:layout_constraintTop_toBottomOf="@+id/order_number_title" />

            <TextView
                android:id="@+id/order_cost_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/order_cost_title"
                tools:text="$200" />

            <TextView
                android:id="@+id/order_addition_cost_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/Additional_fee"
                app:layout_constraintStart_toStartOf="@+id/detail_start_date_image"
                app:layout_constraintTop_toBottomOf="@+id/order_cost_title" />

            <TextView
                android:id="@+id/order_addition_cost_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/order_addition_cost_title"
                tools:text="$0" />

            <TextView
                android:id="@+id/order_discount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/Discount"
                app:layout_constraintStart_toStartOf="@+id/detail_start_date_image"
                app:layout_constraintTop_toBottomOf="@+id/order_addition_cost_title" />

            <TextView
                android:id="@+id/order_discount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/order_discount_title"
                tools:text="$0" />

            <TextView
                android:id="@+id/order_total_cost_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/Total_amount"
                android:textColor="@color/Eki_red_1"
                app:layout_constraintStart_toStartOf="@+id/detail_start_date_image"
                app:layout_constraintTop_toBottomOf="@+id/order_discount_text" />

            <TextView
                android:id="@+id/order_total_cost_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Eki_red_1"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/order_total_cost_title"
                tools:text="$0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/consumption_detail_appeal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/shape_round_orange_10"
                android:text="@string/Appeal"
                android:textColor="@color/white_ffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_total_cost_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
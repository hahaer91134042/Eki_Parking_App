<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/mapOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/map_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/selector_option_map" />
        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textColor="@color/text_color_1"
            android:text="@string/Map_option"
            android:gravity="center"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/checkoutOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/checkout_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/selector_option_checkout" />
        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textColor="@color/text_color_1"
            android:text="@string/order"
            android:gravity="center"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notifyOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/notify_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/selector_option_notify" />
        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textColor="@color/text_color_1"
            android:text="@string/Notify_option"
            android:gravity="center"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/setting_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/selector_option_setting" />
        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textColor="@color/text_color_1"
            android:text="@string/Setting_option"
            android:gravity="center"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>

</LinearLayout>
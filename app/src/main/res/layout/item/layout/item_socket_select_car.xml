<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/tesla_ac"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/AC_Tesla"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@color/text_color_2"
            android:background="@drawable/selector_site_socket"
            />
        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/j1772_ac"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/AC_J1772"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@color/text_color_2"
            android:background="@drawable/selector_site_socket"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/tesla_dc"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/DC_Tesla"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@color/text_color_2"
            android:background="@drawable/selector_site_socket"
            />
        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/ccs1_j1772_dc"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/DC_CCS1_J1772"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@color/text_color_2"
            android:background="@drawable/selector_site_socket"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/chademo_dc"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/DC_CHAdeMO"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@color/text_color_2"
            android:background="@drawable/selector_site_socket"
            />
    </LinearLayout>

</LinearLayout>
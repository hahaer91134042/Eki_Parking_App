<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@color/Eki_orange_6"
        android:gravity="end|center_vertical"
        android:paddingStart="30dp"
        android:paddingEnd="5dp"
        android:text="地主設定"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/text_color_1"
        />

    <LinearLayout
        android:id="@+id/rowFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="middle|end"
        android:divider="@drawable/divider_light_gray3"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingBottom="10dp"
        >
        <RelativeLayout
            android:id="@+id/siteSetRow"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="車位資料"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_16"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right_gray"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bankRow"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/Bank_account"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_16" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right_gray"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

<!--        <ViewStub-->
<!--            android:id="@+id/btnStub"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout="@layout/item_btn_frame"-->
<!--            />-->

        <RelativeLayout
            android:id="@+id/referrerRow"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Customer_Service_Code"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_16"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/referrerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_color_1"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/referrerArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right_gray"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
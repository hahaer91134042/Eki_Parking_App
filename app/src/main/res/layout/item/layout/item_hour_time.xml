<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="wrap_content">
    <com.hill.devlibs.widget.AutoSizeTextView
        android:id="@+id/hourTex"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="top"
        android:paddingStart="20dp"
        android:text="15"
        android:textSize="@dimen/text_size_24"
        android:textColor="@color/text_color_1"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/minOffsetFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:divider="@drawable/divider_light_gray3"
        android:showDividers="middle"
        android:background="@color/color_white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/min_15"
            android:background="@color/light_gray7"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:text="15"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/text_color_1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/min_30"
            android:background="@color/light_gray7"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:text="30"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/text_color_1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/min_45"
            android:background="@color/light_gray7"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:text="45"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/text_color_1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/min_60"
            android:background="@color/light_gray7"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:text="60"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/text_color_1"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
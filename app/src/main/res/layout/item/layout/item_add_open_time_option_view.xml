<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/color_transparent">

    <LinearLayout
        android:id="@+id/copyBtnFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/addBtn"
        app:layout_constraintEnd_toEndOf="@+id/addBtn"
        app:layout_constraintStart_toStartOf="@+id/addBtn"
        app:layout_constraintTop_toTopOf="@+id/addBtn"
        app:layout_constraintVertical_bias="1.0">

        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:text="@string/Copy_and_paste"
            android:textColor="@color/color_white" />

        <ImageView
            android:id="@+id/addCopy"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_circle_white"
            android:padding="8dp"
            android:src="@drawable/icon_copy" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/repeatBtnFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/addBtn"
        app:layout_constraintEnd_toEndOf="@+id/addBtn"
        app:layout_constraintStart_toStartOf="@+id/addBtn"
        app:layout_constraintTop_toTopOf="@+id/addBtn"
        app:layout_constraintVertical_bias="1.0">

        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:text="@string/Repeat_next_week"
            android:textColor="@color/color_white" />

        <ImageView
            android:id="@+id/addRepeat"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_circle_white"
            android:padding="8dp"
            android:src="@drawable/icon_week_copy" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/singleBtnFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/addBtn"
        app:layout_constraintEnd_toEndOf="@+id/addBtn"
        app:layout_constraintStart_toStartOf="@+id/addBtn"
        app:layout_constraintTop_toTopOf="@+id/addBtn"
        app:layout_constraintVertical_bias="1.0">

        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:text="@string/Single_add"
            android:textColor="@color/color_white" />

        <ImageView
            android:id="@+id/addSingle"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_circle_white"
            android:padding="8dp"
            android:src="@drawable/icon_calendar_day" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/addBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_marginBottom="50dp"
        android:background="@drawable/icon_add_new_green"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.hill.devlibs.widget.AutoSizeTextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/Add_time"
        android:textColor="@color/text_color_1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/addBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
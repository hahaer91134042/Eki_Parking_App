<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/eMovingBtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/eMoving"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@color/text_color_2"
            android:background="@drawable/selector_site_socket"
            />
        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/pbgnBtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/PBGN"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@color/text_color_2"
            android:background="@drawable/selector_site_socket"
            />
        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/ionexBtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/ionex"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@color/text_color_2"
            android:background="@drawable/selector_site_socket"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/Household_socket"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@color/text_color_2"
            android:background="@drawable/selector_site_socket"
            />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_checkout_invoice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:divider="@drawable/divider_light_gray3"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <com.github.florent37.expansionpanel.ExpansionHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expansion_headerIndicator="@id/headerIndicator1"
            app:expansion_layout="@id/donateContent"
            app:expansion_toggleOnClick="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="捐贈發票"

                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:id="@+id/headerIndicator1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_orange_24dp" />

            </RelativeLayout>

        </com.github.florent37.expansionpanel.ExpansionHeader>

        <com.github.florent37.expansionpanel.ExpansionLayout
            android:id="@+id/donateContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expansion_expanded="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:divider="@drawable/divider_light_gray3"
                android:orientation="vertical"
                android:paddingEnd="10dp"
                android:showDividers="middle"
                >
                <RelativeLayout
                    android:id="@+id/defaultDonateView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="中華社會福利聯合勸募協會(7505)"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/text_size_16"
                        android:layout_alignParentStart="true"
                        />
                    <ImageView
                        android:id="@+id/defaultDonateCheck"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >
                    <EditText
                        android:id="@+id/inputDonateCode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/text_size_16"
                        android:layout_alignParentStart="true"
                        android:hint="請輸入其他捐贈機關或團體捐贈碼"
                        android:inputType="number"
                        android:maxLength="8"
                        />
                    <ImageView
                        android:id="@+id/customDonateCheck"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="註 : 中華社會福利聯合勸募協會，一個專責募款的組織， 有效集結社會資源，統籌並合理分配給需要的社會福利 團體。"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_14"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    />

            </LinearLayout>

        </com.github.florent37.expansionpanel.ExpansionLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <com.github.florent37.expansionpanel.ExpansionHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expansion_headerIndicator="@id/headerIndicator2"
            app:expansion_layout="@id/serNumContent"
            app:expansion_toggleOnClick="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="統一編號"

                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:id="@+id/headerIndicator2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_orange_24dp" />

            </RelativeLayout>

        </com.github.florent37.expansionpanel.ExpansionHeader>

        <com.github.florent37.expansionpanel.ExpansionLayout
            android:id="@+id/serNumContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expansion_expanded="false">


            <EditText
                android:id="@+id/inputSerNum"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="請輸入統一編號"
                />

        </com.github.florent37.expansionpanel.ExpansionLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:paddingStart="10dp">

        <com.github.florent37.expansionpanel.ExpansionHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expansion_headerIndicator="@id/headerIndicator3"
            app:expansion_layout="@id/vectorContent"
            app:expansion_toggleOnClick="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="載具(三選一)"

                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:id="@+id/headerIndicator3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_orange_24dp" />

            </RelativeLayout>

        </com.github.florent37.expansionpanel.ExpansionHeader>

        <com.github.florent37.expansionpanel.ExpansionLayout
            android:id="@+id/vectorContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expansion_expanded="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:divider="@drawable/divider_light_gray3"
                android:orientation="vertical"
                android:paddingEnd="10dp"
                android:showDividers="middle"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/lable1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_16"
                        android:text="手機載具"
                        android:textColor="@color/text_color_2"
                        android:layout_alignParentStart="true"
                        />
                    <EditText
                        android:id="@+id/phoneVector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="請輸入/+編號"
                        android:textSize="@dimen/text_size_16"
                        android:gravity="center_vertical"

                        android:background="@null"
                        android:layout_toEndOf="@+id/lable1"
                        android:layout_toStartOf="@+id/phoneCheck"
                        />

                    <ImageView
                        android:id="@+id/phoneCheck"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/lable2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_16"
                        android:text="自然人載具"
                        android:textColor="@color/text_color_2"
                        android:layout_alignParentStart="true"
                        />
                    <EditText
                        android:id="@+id/natureVector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="請輸入自然人載具"
                        android:textSize="@dimen/text_size_16"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:layout_toEndOf="@+id/lable2"
                        android:layout_toStartOf="@+id/natureCheck"
                        />

                    <ImageView
                        android:id="@+id/natureCheck"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/memberVectorView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/ll_member"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackground"
                        app:theme="@style/RippleOrange2">

                        <TextView
                            android:id="@+id/lable3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/text_size_16"
                            android:text="會員載具"
                            android:textColor="@color/text_color_2"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="6dp"
                            android:src="@mipmap/info"
                            android:scaleType="center"
                            android:contentDescription="@string/todo" />

                    </LinearLayout>

                    <!--                    <EditText-->
                    <!--                        android:id="@+id/natureVector"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        android:hint="請輸入/+編號"-->
                    <!--                        android:textSize="@dimen/text_size_16"-->
                    <!--                        android:gravity="center_vertical"-->
                    <!--                        android:background="@null"-->
                    <!--                        android:layout_toEndOf="@+id/lable2"-->
                    <!--                        android:layout_toStartOf="@+id/natureCheck"-->
                    <!--                        />-->

                    <ImageView
                        android:id="@+id/memberCheck"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
            </LinearLayout>

        </com.github.florent37.expansionpanel.ExpansionLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/color_white"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/yearText"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray1"
            android:text="2021"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            />
        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/monthText"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray1"
            android:text="5æœˆ"
            android:gravity="center"
            />

    </LinearLayout>

    <com.hill.devlibs.widget.AutoSizeTextView
        android:id="@+id/incomeDetail"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:text="@string/Income_of_the_month"
        android:background="@drawable/stroke_round_corner_orange2"
        android:padding="2dp"
        android:textColor="@color/Eki_orange_4"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
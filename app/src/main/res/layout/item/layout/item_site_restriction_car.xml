<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@color/text_color_1"
            android:text="@string/Parking_type"
            android:gravity="center_vertical"
            android:textStyle="bold"
            />
        <RadioGroup
            android:id="@+id/typeSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <RadioButton
                android:id="@+id/flatSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Flat_parking"
                style="@style/radioBtnStyle_green"
                android:layout_marginEnd="15dp"
                />
            <RadioButton
                android:id="@+id/mechSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Mechanical_parking"
                style="@style/radioBtnStyle_green"
                />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@color/text_color_1"
            android:text="@string/Car_parking_space_size"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />
        <RadioGroup
            android:id="@+id/sizeSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >
            <RadioButton
                android:id="@+id/standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Standard_parking_spaces_full_size"
                android:buttonTint="@color/Eki_green_2"
                style="@style/radioBtnStyle_green"
                />
            <RadioButton
                android:id="@+id/small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Small_parking_spaces_full_size"
                style="@style/radioBtnStyle_green"
                />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="start"
        android:orientation="vertical">

        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/High_parking_space"
            android:textColor="@color/text_color_1"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />

        <RadioGroup
            android:id="@+id/heightSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <!--            android:checkedButton="@id/nonHeight"-->
            <RadioButton
                android:id="@+id/nonHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Unlimited"
                style="@style/radioBtnStyle_green"
                />
            <RadioButton
                android:id="@+id/limitHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Limit_high"
                android:layout_marginStart="10dp"
                style="@style/radioBtnStyle_green"
                />
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/heightInput"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:text="0"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_2"
                    android:text="m"
                    android:layout_toEndOf="@+id/heightInput"
                    />
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:background="@color/light_gray6"
                    android:layout_alignBottom="@+id/heightInput"
                    />
            </RelativeLayout>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="start"
        android:orientation="vertical">

        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/Weight_limit"
            android:textColor="@color/text_color_1"
            android:gravity="center_vertical"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/weightSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <RadioButton
                android:id="@+id/nonWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Unlimited"
                style="@style/radioBtnStyle_green"
                />
            <RadioButton
                android:id="@+id/limitWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Limit_weight"
                android:layout_marginStart="10dp"
                style="@style/radioBtnStyle_green"
                />
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/weightInput"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:text="0"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_2"
                    android:text="kg"
                    android:layout_toEndOf="@+id/weightInput"
                    />
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:background="@color/light_gray6"
                    android:layout_alignBottom="@+id/weightInput"
                    />
            </RelativeLayout>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
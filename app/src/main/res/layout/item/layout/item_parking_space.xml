<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_parking_space3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Parking_space"
        android:textColor="@color/dark_gray1"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/suggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-6dp"
        android:checked="true"
        android:text="@string/Suggest_parking_spaces_full_size"
        style="@style/radioBtnStyle"/>

    <RadioGroup
        android:id="@+id/sizeSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:checkedButton="@id/normal"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:text="@string/Standard_parking_spaces_full_size"
            style="@style/radioBtnStyle"/>

        <RadioButton
            android:id="@+id/small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:layout_marginTop="5dp"
            android:text="@string/Small_parking_spaces_full_size"
            style="@style/radioBtnStyle"/>

    </RadioGroup>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:id="@+id/parentView"
    >
    <com.eki.parking.View.widget.AutoLoadImgView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray2"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/checkImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/color_white"
            android:src="@drawable/icon_checkbox_false_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/serialText"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:text="1111"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/checkImg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/siteName"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:text="2222"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/checkImg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/serialText" />
        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/addressText"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="333"
            android:textColor="@color/color_white"
            app:layout_constraintTop_toBottomOf="@+id/siteName"
            app:layout_constraintStart_toStartOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
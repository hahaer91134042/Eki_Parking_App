<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/Eki_red_4">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.hill.devlibs.widget.AutoSizeTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:theme="@style/orderDetailTitleItem"
                android:text="@string/Address"
                android:gravity="center_vertical|left"
                />
            <com.hill.devlibs.widget.AutoSizeTextView
                android:id="@+id/addressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/orderDetailTextItem"
                android:text="@string/Address"
                android:gravity="right|center_vertical"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.hill.devlibs.widget.AutoSizeTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:theme="@style/orderDetailTitleItem"
                android:text="@string/Time"
                android:gravity="center_vertical|left"
                />
            <com.hill.devlibs.widget.AutoSizeTextView
                android:id="@+id/parkingTimeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/orderDetailTextItem"
                android:text="@string/Time"
                android:gravity="right|center_vertical"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.hill.devlibs.widget.AutoSizeTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:theme="@style/orderDetailTitleItem_Red"
                android:text="@string/Estimated_cost"
                android:gravity="center_vertical|left"
                />
            <com.hill.devlibs.widget.AutoSizeTextView
                android:id="@+id/parkingFeeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/orderDetailTextItem"
                android:text="@string/Estimated_cost"
                android:gravity="right|center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.hill.devlibs.widget.AutoSizeTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:theme="@style/orderDetailTitleItem"
                android:text="@string/Parking_number"
                android:gravity="center_vertical|left"
                />
            <com.hill.devlibs.widget.AutoSizeTextView
                android:id="@+id/parkingNumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/orderDetailTextItem"
                android:text="@string/Parking_number"
                android:gravity="right|center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.hill.devlibs.widget.AutoSizeTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:theme="@style/orderDetailTitleItem"
                android:text="@string/Order_number"
                android:gravity="center_vertical|left"
                />
            <com.hill.devlibs.widget.AutoSizeTextView
                android:id="@+id/orderNumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/orderDetailTextItem"
                android:text="@string/Order_number"
                android:gravity="right|center_vertical"
                />
        </LinearLayout>

    </LinearLayout>

    <com.eki.parking.View.libs.StateButton
        android:id="@+id/checkoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Go_checkout"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:stateListAnimator="@null"
        android:textSize="@dimen/text_size_14"

        app:btn_radius="3dp"

        app:normalTextColor="@color/color_white"
        app:pressedTextColor="@color/color_white"

        app:normalBackgroundColor="@color/Eki_orange_4"
        app:pressedStrokeColor="@color/Eki_orange_4"
        />

</LinearLayout>

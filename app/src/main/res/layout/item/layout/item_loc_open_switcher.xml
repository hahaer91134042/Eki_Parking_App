<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:id="@+id/parentView"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"

    >
<!--    app:cardPreventCornerOverlap="true"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.eki.parking.View.widget.AutoLoadImgView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black_translucent"
            android:padding="10dp"
            >
            <com.hill.devlibs.widget.AutoSizeTextView
                android:id="@+id/serialText"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:text="PPP-123456789"
                android:maxLines="1"
                />
            <com.hill.devlibs.widget.AutoSizeTextView
                android:id="@+id/siteName"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:text="車位1號"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                />
            <com.hill.devlibs.widget.AutoSizeTextView
                android:id="@+id/addressText"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/color_white"
                android:text="台北市信義路XXXXXXX"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:switchMinWidth="60dp"

                app:track="@drawable/selector_switcher_track_color"
                app:thumbTint="@color/color_white"


                />
<!--            android:switchMinWidth="60dp"-->
<!--            android:trackTint="@drawable/selector_switcher_track_color"-->
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
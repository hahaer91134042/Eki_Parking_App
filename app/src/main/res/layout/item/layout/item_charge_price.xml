<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <com.hill.devlibs.widget.AutoSizeTextView
        android:id="@+id/priceTitle"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:gravity="start|top"
        android:text="@string/Charged_price"
        android:textColor="@color/dark_gray1"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/inputFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceTitle"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Money"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/locPrice"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:background="@color/light_gray4"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:text="@string/Number_zero"
            android:textColor="@color/text_color_1"
            android:textCursorDrawable="@drawable/cursor_green2_2dp"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"/>

        <com.hill.devlibs.widget.AutoSizeTextView
            android:id="@+id/half_an_hour"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:text="@string/Half_an_hour"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/inputFrame"
        android:layout_marginTop="5dp"
        android:background="@color/light_gray6" />

</RelativeLayout>
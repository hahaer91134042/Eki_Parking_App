<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_stoke_transparent_10dp"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:calendarTextColor="@color/dark_gray1"
            android:calendarViewShown="false"
            android:datePickerMode="calendar"
            android:dayOfWeekBackground="@color/dark_gray1"
            android:dayOfWeekTextAppearance="@color/dark_gray1"
            android:background="@drawable/shape_round_stoke_transparent_10dp"
            android:headerBackground="@color/Eki_green_2"
            android:headerDayOfMonthTextAppearance="@color/dark_gray1"
            android:headerMonthTextAppearance="@color/dark_gray1"
            android:headerYearTextAppearance="@color/dark_gray1"
            android:maxDate="12/31/2041"
            android:minWidth="10dp"
            android:minHeight="10dp"
            android:minDate="01/01/2021"
            android:spinnersShown="false"
            android:startYear="2021"
            android:endYear="2041"
            android:theme="@style/DatePickerDialogTheme"
            android:yearListItemTextAppearance="@color/dark_gray1"
            android:yearListSelectorColor="@color/Eki_green_2">

        </DatePicker>

    </LinearLayout>

</RelativeLayout>
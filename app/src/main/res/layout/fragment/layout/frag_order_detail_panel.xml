<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:paddingBottom="20dp"
        >
        <TextView
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_color_1"
            android:text=""
            />
        <com.eki.parking.View.widget.AutoLoadImgView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingBottom="40dp"
            >
            <LinearLayout
                android:id="@+id/frame1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:showDividers="middle"
                android:divider="@drawable/divider_gray"
                android:layout_alignParentTop="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Parking_fee"
                            android:textColor="@color/text_color_1"
                            android:textSize="@dimen/text_size_16"
                            android:layout_marginBottom="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Other_fee"
                            android:textColor="@color/text_color_1"
                            android:textSize="@dimen/text_size_16"
                            android:layout_marginBottom="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Default_fee"
                            android:textColor="@color/text_color_1"
                            android:textSize="@dimen/text_size_16"
                            android:layout_marginBottom="10dp"
                            />
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_marginBottom="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Subtotal"
                            android:textColor="@color/text_color_1"
                            android:textSize="@dimen/text_size_16"
                            android:layout_marginBottom="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Discount"
                            android:textColor="@color/text_color_1"
                            android:textSize="@dimen/text_size_16"
                            android:layout_marginBottom="10dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        >
                        <TextView
                            android:id="@+id/parkingFeeRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Parking_fee"
                            android:textColor="@color/text_color_1"
                            android:textSize="@dimen/text_size_16"
                            android:layout_marginBottom="10dp"
                            />
                        <TextView
                            android:id="@+id/otherFeeRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Other_fee"
                            android:textColor="@color/text_color_1"
                            android:textSize="@dimen/text_size_16"
                            android:layout_marginBottom="10dp"
                            />
                        <TextView
                            android:id="@+id/defaultFeeRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Default_fee"
                            android:textColor="@color/text_color_1"
                            android:textSize="@dimen/text_size_16"
                            android:layout_marginBottom="10dp"
                            />
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_marginBottom="10dp"
                            />
                        <TextView
                            android:id="@+id/sumFeeRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Subtotal"
                            android:textColor="@color/text_color_1"
                            android:textSize="@dimen/text_size_16"
                            android:layout_marginBottom="10dp"
                            />
                        <TextView
                            android:id="@+id/discountRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Discount"
                            android:textColor="@color/text_color_1"
                            android:textSize="@dimen/text_size_16"
                            android:layout_marginBottom="10dp"
                            />

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Checkout_amount"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        />
                    <TextView
                        android:id="@+id/amountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:text="222"
                        />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame1"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >
                <com.eki.parking.View.libs.StateButton
                    android:id="@+id/toRatingBtn"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:stateListAnimator="@null"
                    android:gravity="center"
                    android:text="@string/Rating"
                    android:enabled="false"
                    app:btn_radius="@dimen/btn_radius_5"


                    app:normalTextColor="@color/color_white"
                    app:normalBackgroundColor="@color/Eki_orange_4"

                    app:pressedTextColor="@color/color_white"
                    app:pressedBackgroundColor="@color/Eki_orange_4"

                    app:unableTextColor="@color/light_gray5"
                    app:unableBackgroundColor="@color/light_gray4"

                    />

                <com.eki.parking.View.libs.StateButton
                    android:id="@+id/toAppealBtn"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:stateListAnimator="@null"
                    android:gravity="center"
                    android:text="@string/Appeal"
                    android:enabled="false"
                    app:btn_radius="@dimen/btn_radius_5"


                    app:normalTextColor="@color/color_white"
                    app:normalBackgroundColor="@color/Eki_orange_4"

                    app:pressedTextColor="@color/color_white"
                    app:pressedBackgroundColor="@color/Eki_orange_4"

                    app:unableTextColor="@color/light_gray5"
                    app:unableBackgroundColor="@color/light_gray4"

                    />

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>

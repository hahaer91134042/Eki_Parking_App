<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@color/dark_gray1"
            android:text="@string/Address_Detail"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/addressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_1"
            android:text=""
            android:textSize="@dimen/text_size_16"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <com.hill.devlibs.widget.AutoSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@color/dark_gray1"
            android:text="@string/Parking_site"
            android:textStyle="bold"
            />
        <RadioGroup
            android:id="@+id/positionSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <RadioButton
                android:id="@+id/inside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Indoor_parking"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_color_1"
                android:buttonTint="@color/Eki_green_2"
                android:layout_marginEnd="15dp"
                />
            <RadioButton
                android:id="@+id/outside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Outdoor_parking"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_color_1"
                android:buttonTint="@color/Eki_green_2"
                />

        </RadioGroup>


    </LinearLayout>

</LinearLayout>
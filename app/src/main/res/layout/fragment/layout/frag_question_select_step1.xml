<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/questionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_q_and_a"
            style="@style/dark_gray_20dp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Q_and_A" />

        <ImageView
            android:id="@+id/iv_q_and_a"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_prefix_faq"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedbackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_q_and_f"
            style="@style/dark_gray_20dp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Questions_and_reactions" />

        <ImageView
            android:id="@+id/iv_q_and_f"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_prefix_feedback"/>

    </LinearLayout>

</LinearLayout>